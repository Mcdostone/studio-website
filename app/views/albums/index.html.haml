- if @albums.empty?
  = render 'partials/nothing'

-else
  = content_for :js do
    = javascript_include_tag *webpack_asset_paths('init-lightbox')

  %div#container-studio
    %div.grid#container-masonry
      - @albums.each do |album|
        = link_to album_path(album), :class => "item item-overlay" do
          = image_tag(url_thumbnail(random_media(album)))
          %div.item-infos
            %p.item-name
              = album.name
            %p.item-date
              = format_album_date(album)
