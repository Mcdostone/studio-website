- if @types.empty?
  = render 'partials/nothing'

-else
  = content_for :js do
    = javascript_include_tag *webpack_asset_paths('init-lightbox')

  %div#container-studio
    %div.grid#container-masonry
      - @types.each do |type|
        = link_to type_path(type), :class => "item item-overlay" do
          = image_tag(url_thumbnail(random_media(type)))
          %div.item-infos
            %p.item-name
              = type.name
