- if @types.empty?
  = render 'partials/nothing'

-else
  %h2 Types

  %div.grid
    - @types.each do |type|
      = link_to type_path(type), :class => "item" do
        = image_tag(url_thumbnail(random_media(type), current_user.oauth_token, 300))
        %div.item-overlay
          %div.item-infos
            %p.item-name
              = type.name