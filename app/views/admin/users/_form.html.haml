= form_for [:admin, @user] do |f|
  %div.errors
    - if @user.errors.any?
      %h3
        = pluralize(@user.errors.count, "erreur")
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg
  %p
    = label_tag 'Surnom'
    = f.text_field :nickname, placeholder: "Fredlapouf"
  %p
    = label_tag 'Admin'
    %div.wrapper
      = f.check_box :admin, id: "toggle", checked: @user.admin
      %label{:for => "toggle"}
  %p
    = f.submit submit_button_value(@user), class: 'button'