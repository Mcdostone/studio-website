%div.section-admin

  %h2 Liste des reports
  %table.table.table-striped.highlight
    %thead
      %tr
        %th ID
        %th Report par
        %th Média
        %th.useless-column message
        %th.useless-column Ajouté
        %th.useless-column Mis à jour
        %th.useless-column
    %tbody
    - @reports.each do |report|
      %tr
        %td
          = link_to report.id, admin_report_path(report)
        %td
          = link_to full_name(report.user), user_path(report.user)
        %td
          = link_to image_tag(url_thumbnail(report.medium), class: 'table-medium'), admin_report_path(report)
        %td.useless-column
          = format_message(report)
        %td.useless-column
          = format_date(report.created_at)
        %td.useless-column
          = format_date(report.updated_at)
        %td.useless-column
          = link_to 'Afficher', admin_report_path(report)
