

= form_for [@upload], multipart: true do |f|
  %div.form-group
    = label_tag 'Evénement:'
    = f.select :event, options_from_collection_for_select(@events, :id, :name), {}, {:class => 'custom-select form-control', autofocus: 'autofocus'}

  %div.form-group
    = label_tag 'Type:'
    = f.select :type, options_from_collection_for_select(@types, :id, :name, :selected), {}, {:class => 'custom-select form-control'}

  %div.form-group
    = label_tag 'Media à upload:'
    %div{:id => 'studio-dropzone', :class => 'dropzone'}

  %div.form-group
    = f.submit 'Uploader', class: 'button'
