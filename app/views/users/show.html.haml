%h2 Profil

%div.profile
  
  = render 'profile', user: @user
  
  - if current_user == @user
    = link_to 'Modifier', edit_user_path(@user), class: "button"

  - if (current_user.admin? && current_user != @user || current_user.author? && current_user != @user)
    = link_to 'Modifier le profil', edit_admin_user_path(@user), class: "button"