%div#container-studio

  = render 'profile', user: @user

  %div.center
    - if @current_user == @user
      = link_to 'Modifier', edit_user_path(@user), class: 'waves-effect waves-light btn'

    - if @current_user != @user && !(@current_user.author? && @user.admin?)
      = link_to 'Modifier le profil', edit_admin_user_path(@user), class: 'waves-effect waves-light btn'
